<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CountryDetailActivity">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="10dp"
       app:cardCornerRadius="10dp"
       app:cardElevation="10dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:weightSum="3">

           <ImageView
               android:id="@+id/countryFlagD"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:layout_weight="0.5"
               android:src="@mipmap/ic_launcher"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:id="@+id/tvDCountryName"
               android:text="Country Name"
               android:layout_weight="0.3"
               android:gravity="center_vertical"
               android:layout_gravity="center_vertical"
               android:textAlignment="center"
               android:textSize="20sp"
               android:textColor="@color/colorPrimary"
               android:textStyle="bold"
               android:textAllCaps="true"
               tools:ignore="RtlCompat" />
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2.2"
               app:cardElevation="15dp"
               android:layout_margin="10dp"
               app:cardCornerRadius="10dp">
               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/cases"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDCases"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/today_cases"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDTodayCases"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/deaths"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDDeaths"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/today_deaths"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDTodayDeaths"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/recovered"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDRecovered"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/today_recovered"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDTodayRecovered"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/active"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDActive"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/critical"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDCritical"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/cases_per_million"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/casesPerMillionD"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="25dp"
                           android:layout_marginLeft="25dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="sans-serif-light"
                               android:text="@string/continent"
                               android:textStyle="bold"
                               android:textSize="18sp"/>
                           <TextView
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:id="@+id/tvDContinent"
                               android:textAlignment="textEnd"
                               android:textSize="18sp"
                               android:textColor="@color/color_one"
                               android:textStyle="bold"
                               android:fontFamily="sans-serif-light"/>

                       </RelativeLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/color_two"
                           android:layout_marginLeft="20dp"
                           android:layout_marginRight="20dp"
                           />

               </LinearLayout>
               </ScrollView>
           </androidx.cardview.widget.CardView>
       </LinearLayout>

   </androidx.cardview.widget.CardView>


</LinearLayout>